{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "An Activity procures or generates one or more Evaluations",
    "additionalProperties": true,
    "properties": {
        "_id": {
            "type": "string",
            "description": "Auto-generated by MongoDB",
            "primaryKey": true,
            "pattern": "^[a-fA-F0-9]{24}$"
        },
        "activity-type": {
            "type": "string",
            "description": "The specific Activity category or sub-class that inherits properties from the generic Activity class",
            "primaryKey": false
        },
        "activity-name": {
            "type": "string",
            "description": "The unambiguous name of the Activity",
            "primaryKey": false
        },
        "activity-description": {
            "type": "string",
            "description": "The description of the Activity that produced one or more Evaluations",
            "primaryKey": false
        },
        "agent": {
            "type": "array",
            "description": "The Agent(s) primarily responsible for conducting the Activity",
            "primaryKey": false,
            "additionalItems": true,
            "uniqueItems": false,
            "items": {
                "type": "string",
                "primaryKey": true,
                "arrayItem": true,
                "pattern": "^[a-fA-F0-9]{24}$"
            }
        },
        "parent-activity": {
            "type": "string",
            "description": "The parent Activity under which this Activity is heirarchically nested",
            "primaryKey": false,
            "pattern": "^[a-fA-F0-9]{24}$"
        },
        "network-activity": {
            "type": "array",
            "description": "An undirected network of Activities",
            "primaryKey": false,
            "additionalItems": true,
            "uniqueItems": false,
            "items": {
                "type": "string",
                "primaryKey": false,
                "arrayItem": true,
                "pattern": "^[a-fA-F0-9]{24}$"
            }
        }
    },
    "capped": false,
    "validationLevel": "Strict",
    "validationAction": "Error",
    "required": [
        "activity-type",
        "activity-name",
        "activity-description",
        "agent"
    ]
}