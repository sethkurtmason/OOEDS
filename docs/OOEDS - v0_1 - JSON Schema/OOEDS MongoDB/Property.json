{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "The characteristic of an Entity subjected to measurement or observation",
    "additionalProperties": false,
    "properties": {
        "_id": {
            "type": "string",
            "description": "Auto-generated by MongoDB",
            "primaryKey": true,
            "pattern": "^[a-fA-F0-9]{24}$"
        },
        "property-type": {
            "type": "string",
            "description": "The unambiguous name for the property (e.g. water temperature, solar irradiance)",
            "primaryKey": false
        },
        "property-dimensions": {
            "type": "string",
            "description": "The dimensions(s) associated with the property (e.g. length, time, mass/time)",
            "primaryKey": false
        }
    },
    "capped": false,
    "validationLevel": "Strict",
    "validationAction": "Error",
    "required": [
        "_id",
        "property-type",
        "property-dimensions"
    ]
}