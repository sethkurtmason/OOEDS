{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "An Agent may be an individual, an organization, a company, a government, etc.",
    "additionalProperties": true,
    "properties": {
        "_id": {
            "type": "string",
            "description": "Auto-generated by MongoDB",
            "primaryKey": true,
            "pattern": "^[a-fA-F0-9]{24}$"
        },
        "agent-type": {
            "type": "string",
            "description": "The specific category or sub-class of Agent that inherits properties from the generic Agent class",
            "primaryKey": false
        },
        "agent-name": {
            "type": "string",
            "description": "The name of the individual, organization, etc.",
            "primaryKey": false
        },
        "agent-phone": {
            "type": "string",
            "description": "Contact telephone number for the Agent",
            "pattern": "^(\\\\([0-9]{3}\\\\))?[0-9]{3}-[0-9]{4}$",
            "primaryKey": false,
            "sample": "(123)456-7890"
        },
        "agent-email": {
            "type": "string",
            "description": "Contact email for the Agent",
            "format": "email",
            "primaryKey": false
        },
        "agent-address": {
            "type": "string",
            "description": "Contact physical address for the Agent",
            "primaryKey": false
        },
        "parent-agent": {
            "type": "string",
            "description": "The Agent under which this Agent is heirarchically nested",
            "primaryKey": false,
            "pattern": "^[a-fA-F0-9]{24}$"
        },
        "network-agent": {
            "type": "array",
            "description": "The non-heirarchical network of Agents this Agent is associated with",
            "primaryKey": false,
            "additionalItems": true,
            "uniqueItems": false,
            "items": {
                "type": "string",
                "primaryKey": false,
                "arrayItem": true,
                "pattern": "^[a-fA-F0-9]{24}$"
            }
        }
    },
    "capped": false,
    "validationLevel": "Strict",
    "validationAction": "Error",
    "required": [
        "_id",
        "agent-type",
        "agent-name",
        "agent-phone",
        "agent-email",
        "agent-address"
    ],
    "dependencies": {
        "parent-agent": [
            "_id"
        ]
    }
}